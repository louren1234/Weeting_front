<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="152dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="408dp"
                android:layout_height="115dp"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/mainpage"
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/weeting"
                    android:textColor="@color/mainColor"
                    android:textSize="40sp"
                    app:autoSizeMaxTextSize="40sp"
                    app:autoSizeTextType="uniform" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/search"
                    android:layout_width="31dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="settings"
                    android:gravity="center_vertical"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/search"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout

                android:id="@+id/linearLayout3"
                android:layout_width="414dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/toHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="home"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/home"
                    tools:ignore="HardcodedText" />

                <ImageButton
                    android:id="@+id/toList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="list"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/list"
                    tools:ignore="HardcodedText" />

                <ImageButton
                    android:id="@+id/toMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="map"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/pin"
                    tools:ignore="HardcodedText" />

                <ImageButton
                    android:id="@+id/toCalender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="calender"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/calendar"
                    tools:ignore="HardcodedText" />

                <ImageButton
                    android:id="@+id/toMypage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="mypage"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/user"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="582dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView2"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:adjustViewBounds="true" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<!-- 여기 구현하고싶은거 : 장소 핀 누르면 밑에 정보 뜨도록 -->