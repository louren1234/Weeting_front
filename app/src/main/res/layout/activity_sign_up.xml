<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Weeting!"
            android:textSize="45dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/sign_upName"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:hint=" 이름을 입력해주세요." />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여성들의 다양한 취미 개발과 발전을 위해\n
오프라인 모임의 장을 만드는 것에\n
본 어플리케이션의 목적이 있습니다.\n
여성만의 원활한 가입을 위하여\n
신분증 인증을 실시하오니 양해 부탁드립니다.\n
개인 정보는 확인 시에만 이용되고 수집되지 않습니다.
"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주민등록번호"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/sign_upPersonFront"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:maxLength="6"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <EditText
                android:id="@+id/sign_upPersonBack"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:inputType="number"
                android:maxLength="7"
                android:password="true"
                />
            <Button
                android:id="@+id/sign_upPersonCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="PersonCheck"
                android:text="인증"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/sign_upId"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:hint=" 아이디를 입력해주세요."
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="nickNameCheck"
                android:text="확인" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생일"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/sign_upBirth"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:hint=" 생일을 입력해주세요."
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/sign_upPassword"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:hint=" 비밀번호를 입력해주세요."
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 비밀번호 확인"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/sign_upPasswordCheck"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:hint="비밀번호를 확인해주세요."
                android:background="@drawable/edittext_rounded_corner_rectangle"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/sign_upEmail"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:hint=" 이메일을 입력해주세요."
                android:background="@drawable/edittext_rounded_corner_rectangle"
                />
            <Button
                android:id="@+id/sign_upEmailOverlap"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:onClick="emailOverlap"
                android:text="중복" />
            <Button
                android:id="@+id/sign_upEmailCheck"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:onClick="emailCheck"
                android:text="인증" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진을 정해주세요"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:id="@+id/profile"
            app:srcCompat="@drawable/circle"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/camera"
                android:text="camera"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gallery"
                android:text="gallery"
                />
        </LinearLayout>
        <Button
            android:id="@+id/sign_upCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="확인"
            android:onClick="SignUpCheck"
            />
        <Button
            android:id="@+id/tempInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="관심사"
            android:onClick="TempInterest"
            />
    </LinearLayout>
</ScrollView>