<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="이름"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/sign_upName"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:hint=" 이름을 입력해주세요." />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주민번호"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/sign_upPersonFront"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:maxLength="6"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <EditText
                android:id="@+id/sign_upPersonBack"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:inputType="number"
                android:maxLength="7"
                android:password="true"
                />

            <Button
                android:id="@+id/sign_upPersonCheck"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginStart="7dp"
                android:onClick="PersonCheck"
                android:text="인증"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="여성들을 위한 다양하고 안전한 취미활동을 위해 다양한 온/오프라인
모임을 가지는 것에 본 어플의 목적이 있습니다. 따라서 여성만의
가입을 위해 신분증 인증을 실시하오니 양해 부탁드립니다.
주민등록번호는 여성 확인 시에만 이용되며 수집하지 않습니다.
"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="아이디"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/sign_upId"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:hint=" 아이디를 입력해주세요."
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                />

            <Button
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginStart="7dp"
                android:onClick="nickNameCheck"
                android:text="확인" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="비밀번호"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/sign_upPassword"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:hint=" 비밀번호를 입력해주세요."
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="7dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="비밀번호 확인"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/sign_upPasswordCheck"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:hint="비밀번호를 확인해주세요."
                android:background="@drawable/edittext_rounded_corner_rectangle"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/sign_upEmail"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:hint=" 메일을 입력해주세요."
                android:background="@drawable/edittext_rounded_corner_rectangle"
                />
            <Button
                android:id="@+id/sign_upEmailOverlap"
                android:layout_width="85dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:onClick="emailOverlap"
                android:text="중복확인" />
            <Button
                android:id="@+id/sign_upEmailCheck"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:onClick="emailCheck"
                android:text="인증" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="생일"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/sign_upBirth"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:hint=" 생일을 입력해주세요."
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                />

            <Button
                android:id="@+id/sign_upBirthCheck"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginStart="7dp"
                android:onClick="PersonCheck"
                android:text="인증" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="관심사"
                android:textSize="20sp"
                />
            <Button
                android:id="@+id/tempInterest"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:onClick="TempInterest"
                android:text="관심사 설정" />
            />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="프로필 사진을 정해주세요"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:id="@+id/profile"
            app:srcCompat="@drawable/circle"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:id="@+id/camera"
                android:text="camera"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gallery"
                android:text="gallery"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sign_upCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:backgroundTint="@color/colorAccent"
                android:onClick="SignUpCheck"
                android:text="가입하기" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>